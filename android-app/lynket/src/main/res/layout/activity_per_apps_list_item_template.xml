<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/blacklist_template_root"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:gravity="center|start"
  android:minHeight="56dp"
  android:orientation="horizontal"
  android:paddingTop="8dp"
  android:paddingEnd="8dp"
  android:paddingRight="8dp"
  android:paddingBottom="8dp"
  android:weightSum="1"
  tools:ignore="RtlSymmetry">

  <ImageView
    android:id="@+id/app_list_icon"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_gravity="center"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:scaleType="fitCenter"
    tools:ignore="ContentDescription"
    tools:src="@mipmap/ic_launcher" />

  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingEnd="4dp"
    android:paddingRight="8dp"
    tools:ignore="RtlSymmetry">

    <TextView
      android:id="@+id/app_list_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:ellipsize="end"
      android:maxLines="1"
      android:paddingBottom="2dp"
      android:textAppearance="@style/TextAppearance.AppCompat.Medium"
      android:textColor="?android:attr/textColorPrimary"
      android:textSize="16sp"
      tools:ignore="SelectableText"
      tools:text="@string/app_name" />

    <TextView
      android:id="@+id/app_list_package"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:ellipsize="end"
      android:maxLines="1"
      android:textAppearance="@style/TextAppearance.AppCompat.Small"
      android:textColor="?android:attr/textColorSecondary"
      tools:ignore="SelectableText"
      tools:text="@string/app_name" />
  </LinearLayout>

  <ImageView
    android:id="@+id/blacklistIcon"
    android:layout_width="24dp"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:clickable="true"
    android:contentDescription="@string/choose_secondary_browser"
    android:focusable="true"
    android:scaleType="fitCenter"
    tools:ignore="ContentDescription"
    tools:src="@mipmap/ic_launcher" />

  <ImageView
    android:id="@+id/incognitoIcon"
    android:layout_width="24dp"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:clickable="true"
    android:contentDescription="@string/incognito_mode"
    android:focusable="true"
    android:scaleType="fitCenter"
    tools:ignore="ContentDescription"
    tools:src="@mipmap/ic_launcher" />
</LinearLayout>
