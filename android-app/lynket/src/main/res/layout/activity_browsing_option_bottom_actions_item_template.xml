<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="?attr/selectableItemBackground"
  android:clickable="true"
  android:focusable="true"
  android:orientation="vertical"
  android:paddingTop="4dp"
  android:paddingBottom="4dp">

  <ImageView
    android:id="@+id/bottom_icon"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_centerInParent="true"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:scaleType="center"
    app:srcCompat="@drawable/ic_launch_white_24dp"
    tools:ignore="ContentDescription" />

  <TextView
    android:id="@+id/bottom_action"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:layout_toEndOf="@+id/bottom_icon"
    android:layout_toRightOf="@+id/bottom_icon"
    android:gravity="center|start"
    android:paddingEnd="16dp"
    android:paddingRight="16dp"
    android:text="@string/about"
    android:textColor="@color/material_dark_light"
    android:textSize="14sp"
    tools:ignore="RtlSymmetry" />
</RelativeLayout>
